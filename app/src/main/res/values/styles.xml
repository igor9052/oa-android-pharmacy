<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ThreeButtonsOnProductListLandscape" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxWidth">120dp</item>
        <item name="android:background">@drawable/cell_product_list_button</item>
        <item name="android:textColor">#ff085626</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="ThreeButtonsOnProductList" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/cell_product_list_button</item>
        <item name="android:textColor">#ff085626</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="MyToolbar" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">#ff085626</item>
        <item name="android:background">#a19bed86</item>
    </style>


</resources>
